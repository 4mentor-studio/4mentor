---
interface Props {
    title: string;
    body: string;
    href: string;
}
import i18next, { t } from "i18next";
console.log( t("faq.questions", { returnObjects: true }) );
const {href, title, body} = Astro.props;
---

<div class="bg-white">
    <div class="mx-auto max-w-7xl divide-y divide-gray-900/10 px-6 py-32 lg:px-8">
        <h2 class="text-2xl font-bold leading-10 tracking-tight text-gray-900">Frequently asked questions</h2>

        <dl class="mt-10 space-y-8 divide-y divide-gray-900/10">
            {t("faq.questions", { returnObjects: true }).map((obj:object) => {
                return (
                    <div class="pt-8 lg:grid lg:grid-cols-12 lg:gap-8">
                        <dt class="text-base font-semibold leading-7 text-gray-900 lg:col-span-5">
                            {obj.question}
                        </dt>
                        <dd class="mt-4 lg:col-span-7 lg:mt-0">
                            <p class="text-base leading-7 text-gray-600">
                                {obj.answer}
                            </p>
                        </dd>
                    </div>
                )
            })}

           

        </dl>
    </div>
</div>
